    <h1 style="text-align: center;">Announcement Form</h1>
    <div style="width: 70%; margin-left: auto; margin-right: auto;">
    <form action='/addannouncement' method="POST">
        <div class="form-group">
          <label for="announcement" class="form-label">Announcement</label>
          <input type="input" class="form-control" id="announcement" name="announcement" aria-describedby="emailHelp" placeholder="Enter Announcement">
        </div>
        <h1>Select Related branches</h1>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" name="CSE" id="CSE">
          <label class="form-check-label" for="CSE">CSE</label>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" name="ECE" id="ECE">
          <label class="form-check-label" for="ECE">ECE</label>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" name="EEE" id="EEE">
          <label class="form-check-label" for="EEE">EEE</label>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" name="MECH" id="MECH">
          <label class="form-check-label" for="MECH">MECH</label>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" name="CHEM" id="CHEM">
          <label class="form-check-label" for="CHEM">CHEM</label>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" name="CIVIL" id="CIVIL">
          <label class="form-check-label" for="CIVIL">CIVIL</label>
        </div>
        <div class="form-group form-check">
